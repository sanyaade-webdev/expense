<div id="content">
  <% if @groups.length > 0 %>
    <h2>Search for &#8220;<%= @query %>&#8221;</h2>

    <% @groups.each do |group, payments| %>
      <h3><%= group %></h3>

      <ul class="payments">
        <% payments.each do |payment| -%>
          <li><strong><%= number_to_currency payment.cost %></strong> on <span><%= h payment.item %></span>.</li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    <h3>Search for &#8220;<%= @query %>&#8221;</h3>

    <p>No results found.</p>
  <% end %>
</div>

<div id="sidebar">
  <%= render :partial => 'sidebar' %>
</div>
